@model aptechvision.Models.Package

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // Update path if necessary
    ViewData["Title"] = "Delete Package";
}


<h2>Delete Package</h2>

<h3>Are you sure you want to delete this package?</h3>

<div>
    <h4>Package</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Price per Kg</dt>
        <dd class="col-sm-10">@Model.PricePerKg</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
