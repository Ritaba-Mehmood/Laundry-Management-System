@{
}
 @model IEnumerable<aptechvision.Models.Package>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";  // Update path if necessary
    ViewData["Title"] = "Manage Packages";
}
 

<!-- Your Index view content -->

<div class="container py-5">
    <h2 class="text-center mb-4">Package List</h2>

  

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.PricePerKg)</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center" style="width: 120px;">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.PricePerKg)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td class="text-center" style="width: 120px;">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-primary">Add New Package</a>
    </div>
</div>

 