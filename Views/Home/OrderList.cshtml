 @model IEnumerable<aptechvision.Models.OrderViewModel>

<div class="site-section pb-0">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Order List</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Pickup Date</th>
                            <th>Slot</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Name</td>
                                <td>@order.Phone</td>
                                <td>@order.PickupDate.ToShortDateString()</td>
                                <td>@order.Slot</td>
                                <td>@order.Email</td>
                                <td>@order.Address</td>
                                <td>
                                    <a href="@Url.Action("OrderDetail", "Orders", new { id = order.Id })" class="btn btn-info">Details</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a href="@Url.Action("CancelOrder", "Orders", new { id = order.Id })" class="btn btn-danger">Cancel</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

