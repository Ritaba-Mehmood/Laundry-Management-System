 @model IEnumerable<aptechvision.Models.Package>

<!-- Page Header Start -->
<div class="page-header container-fluid bg-secondary pt-2 pt-lg-5 pb-2 mb-5">
    <div class="container py-5">
        <div class="row align-items-center py-4">
            <div class="col-md-6 text-center text-md-left">
                <h1 class="mb-4 mb-md-0 text-white">Pricing</h1>
            </div>
            <div class="col-md-6 text-center text-md-right">
                <div class="d-inline-flex align-items-center">
                    <a class="btn text-white" href="/">Home</a>
                    <i class="fas fa-angle-right text-white"></i>
                    <a class="btn text-white disabled" href="#">Pricing</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Header end -->
<!-- Pricing Packages Start -->
<div class="container py-5">
    <div class="row">
        @foreach (var package in Model)
        {
            <div class="col-lg-3 col-md-6 mb-4 d-flex align-items-stretch">
                <div class="card card-hover shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">@package.Name</h5>
                        <p class="card-text">@package.Description</p>
                        <p class="card-text"><strong>Price per Kg: </strong>@package.PricePerKg</p>
                        <a href="@Url.Action("OrderNow", "Home", new { packageId = 1 })" class="btn btn-primary">Order Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Pricing Packages End -->



<style>
                     .card-hover {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    background: linear-gradient(145deg, #f8f9fa, #e2e2e2);
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1);
}

.card-hover:hover {
    transform: translateY(-10px);
    box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
}

.card-hover .card-body {
    padding: 30px;
    background: #fff;
    border-radius: 15px;
}

.card-hover .card-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 15px;
    color: #007bff;
    text-transform: uppercase;
}

.card-hover .card-text {
    font-size: 1rem;
    margin-bottom: 20px;
    color: #6c757d;
}

.btn-primary {
    background-color: #007bff;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    border-radius: 50px;
    transition: background-color 0.3s ease-in-out;
}

.btn-primary:hover {
    background-color: #0056b3;
}

 

</style>
   
